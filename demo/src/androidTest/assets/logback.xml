<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="logcat"
              class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger%nopex</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%msg%n%ex</pattern>
        </encoder>
    </appender>

    <logger name="com.nextfaze.devfun.inject.dagger2" level="TRACE" />

    <root level="WARN">
        <appender-ref ref="logcat" />
    </root>

</configuration>
